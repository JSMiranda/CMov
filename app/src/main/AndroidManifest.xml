        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.CreateWorkspaceActivity"
            android:label="@string/title_activity_create_workspace" >
        </activity>
        <activity
            android:name=".app.WorkspaceActivity" >
        </activity>
        <activity
            android:name=".app.RenameFileActivity"
            android:label="@string/title_rename_file" >
        </activity>
        <activity
            android:name=".app.EditFileActivity"
            android:label="@string/title_activity_edit_file" >
        </activity>
        <activity
            android:name=".app.workspacePermissionsActivity"
            android:label="@string/title_activity_workspace_permissions" >
        </activity>
    </application>

</manifest>
